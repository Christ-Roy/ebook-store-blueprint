# Server configuration
PORT=5000
NODE_ENV=development

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/ebook-store
# For production, use cloud MongoDB URI e.g. MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ebook-store

# JWT (Json Web Token)
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Email service (configure with your provider)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Ebook Store <your-email@gmail.com>

# Download links
DOWNLOAD_LINK_EXPIRY=48h
MAX_DOWNLOADS=3

# Base URL for frontend (for email links)
FRONTEND_URL=http://localhost:3000

# File storage path (relative to server root)
EBOOKS_PATH=../assets/ebooks